<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanelAdmina"
    style="@style/stylTLA"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_centerInParent="true"
        >


        <TextView
            android:layout_marginTop="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lekarze do zatwierdzenia:"
            android:textSize="25sp" />

        <ListView
            android:id="@+id/lekarzeDoZatwierdzenia"
            android:layout_width="wrap_content"
            android:layout_height="60pt"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_marginTop="10pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktywne konta:"
            android:textSize="25sp" />

        <ListView
            android:id="@+id/aktywneKonta"
            android:layout_width="wrap_content"
            android:layout_height="60pt"
            android:layout_marginTop="15dp"
            />

    </LinearLayout>

    <TextView
        style="@style/PanelTextview"
        android:text="PANEL ADMINA"
        />
    <TextView
        style="@style/WYLOGUJ"
        android:onClick="wyloguj"
        />

</RelativeLayout>