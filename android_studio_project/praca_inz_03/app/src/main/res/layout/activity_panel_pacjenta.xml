<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanelPacjenta"
    style="@style/stylTLA"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_centerInParent="true"
        >


        <Button
            android:id="@+id/dodajWizyte"
            style="@style/stylbatona"
            android:paddingLeft="30pt"
            android:paddingRight="30pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="dodajWizte"
            android:text="UMÓW WIZYTĘ"
            android:layout_marginTop="40pt"
            android:textSize="25sp"
            android:background="@drawable/rounded_corners"
            />
        <TextView
            android:layout_marginTop="20pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nadchodzące wizyty:"
            android:textSize="25sp" />

        <ListView
            android:id="@+id/nadchodząceWizyty"
            android:layout_width="wrap_content"
            android:layout_height="60pt"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_marginTop="15pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Historia_wizyt"
            android:textSize="25sp" />

        <ListView
            android:id="@+id/historiaWizyt"
            android:layout_width="wrap_content"
            android:layout_height="60pt"
            android:layout_marginTop="20dp"
            />

        </LinearLayout>

    <TextView
        style="@style/PanelTextview"
        android:text="@string/panel_pacjenta"
         />

</RelativeLayout>