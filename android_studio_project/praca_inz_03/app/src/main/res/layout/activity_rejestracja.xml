<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rejestracja"
    style="@style/stylTLA"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_centerInParent="true"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="e-mail"
            android:inputType="textWebEmailAddress"
            android:id="@+id/email"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:inputType="text"
            android:hint="Imię"
            android:id="@+id/imie"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:inputType="text"
            android:hint="Nazwisko"
            android:id="@+id/nazwisko"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="PESEL"
            android:inputType="number"
            android:id="@+id/pesel"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="Numer telefonu"
            android:inputType="phone"
            android:id="@+id/telefon"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="Data urodzenia (YYYY-MM-DD)"
            android:inputType="date"
            android:id="@+id/data_urodzenia"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="Hasło"
            android:inputType="textWebPassword"
            android:id="@+id/haslo"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:hint="Powtórz hasło"
            android:inputType="textWebPassword"
            android:visibility="visible"
            android:id="@+id/haslo1"
            />
        />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="DODAJ"
            android:onClick="DodajBtn"
            style="@style/stylbatona"
            android:background="@drawable/rounded_corners"            />
    </LinearLayout>
    <TextView
        style="@style/PanelTextview"
        android:text="REJESTRACJA"
        />
</RelativeLayout>